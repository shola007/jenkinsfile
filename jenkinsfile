pipeline{
    agent any 
   
   stages{

         stage("build"){
        steps{
            echo 'building application'
        }
             
         }
         
         stage("test"){
        steps{
            echo 'testing application'
            echo 'updating testing before moving to deploy stage'
        }
        
    }
    stage("deploy"){
        steps{
            echo 'deploying application'
        }
    }
} 
post{
    success{

        echo 'SUCCESS!!!'}
failure{
        echo 'FAILED!!!'}
    
}
}

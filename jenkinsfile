pipeline{
    agent {label 'slave2'} 
   
   stages{
         
         stage("test"){
        steps{
            echo 'testing application'
            echo 'updating testing stage into test node'
        }
        
    }
    stage("deploy"){
        steps{
            echo 'deploying application to production node'
        }
    }
} 
post{
    success{

        echo 'SUCCESS!!!'}
failure{
        echo 'FAILED!!!'}
    
}
}
